{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**"],
      "outputs": ["dist/**"],
      "cache": false,
      "env": [
        "NODE_ENV=production",
        "PUBLIC_VITE_API_URL",
        "PUBLIC_VITE_APP_ENV",
        "PUBLIC_VITE_GOOGLE_DRIVE_CLIENT_ID",
        "ELASTICSEARCH_HOST",
        "ELASTICSEARCH_PORT",
        "DATABASE_HOST",
        "DATABASE_PORT",
        "DATABASE_NAME",
        "DATABASE_USER",
        "DATABASE_PASSWORD",
        "JWT_SECRET",
        "APP_ENDUSER_DOMAIN",
        "USER_ROOT_EMAIL",
        "USER_ROOT_PASSWORD",
        "DATABASE_CHECK_MIGRATIONS_ON_STARTUP",
        "ELASTICSEARCH_USER",
        "ELASTICSEARCH_PASSWORD"
      ]
    },
    "build:dev": {
      "dependsOn": ["^build:dev"],
      "inputs": ["src/**"],
      "outputs": ["dist/**"],
      "cache": true,
      "env": [
        "NODE_ENV=development",
        "PUBLIC_VITE_API_URL",
        "PUBLIC_VITE_APP_ENV",
        "PUBLIC_VITE_GOOGLE_DRIVE_CLIENT_ID",
        "ELASTICSEARCH_HOST",
        "ELASTICSEARCH_PORT",
        "DATABASE_HOST",
        "DATABASE_PORT",
        "DATABASE_NAME",
        "DATABASE_USER",
        "DATABASE_PASSWORD",
        "JWT_SECRET",
        "APP_ENDUSER_DOMAIN",
        "USER_ROOT_EMAIL",
        "USER_ROOT_PASSWORD",
        "DATABASE_CHECK_MIGRATIONS_ON_STARTUP",
        "ELASTICSEARCH_USER",
        "ELASTICSEARCH_PASSWORD"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV=development",
        "PUBLIC_VITE_API_URL",
        "PUBLIC_VITE_APP_ENV",
        "PUBLIC_VITE_GOOGLE_DRIVE_CLIENT_ID",
        "ELASTICSEARCH_HOST",
        "ELASTICSEARCH_PORT",
        "DATABASE_HOST",
        "DATABASE_PORT",
        "DATABASE_NAME",
        "DATABASE_USER",
        "DATABASE_PASSWORD",
        "JWT_SECRET",
        "APP_ENDUSER_DOMAIN",
        "USER_ROOT_EMAIL",
        "USER_ROOT_PASSWORD",
        "DATABASE_CHECK_MIGRATIONS_ON_STARTUP",
        "ELASTICSEARCH_USER",
        "ELASTICSEARCH_PASSWORD"
      ]
    },
    "lint": {
      "cache": true
    },
    "check:types": {
      "cache": true
    },
    "test": {
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}

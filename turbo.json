{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**"],
      "outputs": ["dist/**"],
      "cache": true,
      "env": ["NODE_ENV", "VITE_API_URL"]
    },
    "build:dev": {
      "dependsOn": ["^build:dev"],
      "inputs": ["src/**"],
      "outputs": ["dist/**"],
      "cache": true,
      "env": ["NODE_ENV=development", "VITE_API_URL"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV=development", "VITE_API_URL"]
    },
    "lint": {
      "cache": true
    },
    "check:types": {
      "cache": true
    },
    "test": {
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
